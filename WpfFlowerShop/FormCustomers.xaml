<Window x:Class="WpfSnackBar.FormCustomers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Список клиентов" Height="351" Width="480" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
        <DataGrid x:Name="dataGridViewClients" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="352" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" IsReadOnly="True"/>
        <Button x:Name="buttonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="378,29,0,0" VerticalAlignment="Top" Width="75" Click="buttonAdd_Click"/>
        <Button x:Name="buttonUpd" Content="Изменить" HorizontalAlignment="Left" Margin="378,74,0,0" VerticalAlignment="Top" Width="75" Click="buttonUpd_Click"/>
        <Button x:Name="buttonDel" Content="Удалить" HorizontalAlignment="Left" Margin="378,123,0,0" VerticalAlignment="Top" Width="75" Click="buttonDel_Click"/>
        <Button x:Name="buttonRef" Content="Обновить" HorizontalAlignment="Left" Margin="378,172,0,0" VerticalAlignment="Top" Width="75" Click="buttonRef_Click"/>

    </Grid>
</Window>
